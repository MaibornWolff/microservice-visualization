{
  "compilerOptions": {
    "target": "es2024",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "allowJs": true,
    "noImplicitAny": false,
    // "strict": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "types": [
      "node"
    ]
  },
  "lib": [
    "es2024"
  ],
  "rootDirs": [
    "src",
    "test"
  ],
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "temp",
    "build",
    "tadis-analyzer-snapshot",
    "dummy-system-source"
  ],
  "ts-node": {
    "files": true,
    "esm": true
  }
}
