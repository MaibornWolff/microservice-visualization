{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2024",
    "moduleResolution": "bundler",
    "downlevelIteration": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "build",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "rootDirs": [
      "src"
    ],
    "baseUrl": ".",
    "lib": [
      "es2024",
      "dom",
      "dom.iterable",
      "ESNext.Disposable"
    ],
    "types": [
      "node",
      "vitest"
    ]
  },
  "exclude": [
    "node_modules",
    "**/*.js",
    "build"
  ]
}
