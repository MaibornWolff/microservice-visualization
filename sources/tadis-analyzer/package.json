{
  "name": "tadis-analyzer",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MaibornWolff/microservice-visualization.git"
  },
  "version": "2.2.2",
  "description": "generic analyzer tool for architecture discovery",
  "main": "build/lib.js",
  "types": "build/lib.d.ts",
  "files": [
    "build/"
  ],
  "license": "Apache-2.0",
  "author": "Andreas Blunk, MaibornWolff GmbH",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "build": "rm -rf build && tsc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/app/default/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:prod": "node build/src/app/default/main.js",
    "code-pattern": "ts-node -r tsconfig-paths/register src/app/code-pattern/main.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint-fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:cov": "vitest run --coverage"
  },
  "dependencies": {
    "@kubernetes/client-node": "^1.2.0",
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.1.1",
    "@nestjs/core": "^11.1.1",
    "@nestjs/platform-express": "^11.1.1",
    "axios": "^1.9.0",
    "dotenv": "^17.2.1",
    "immer": "^10.1.1",
    "joi": "^18.0.0",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.1",
    "@swc/core": "^1.11.29",
    "@types/express": "^5.0.2",
    "@types/lodash": "^4.17.17",
    "@types/node": "^24.1.0",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitest/coverage-v8": "^3.1.4",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.5",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "supertest": "^7.1.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "unplugin-swc": "^1.5.3",
    "vitest": "^4.0.5"
  }
}
