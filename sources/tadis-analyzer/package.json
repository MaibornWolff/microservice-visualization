{
  "name": "tadis-analyzer",
  "version": "2.0.0",
  "description": "generic analyzer tool for architecture discovery",
  "main": "build/src/lib.js",
  "types": "build/src/lib.d.ts",
  "files": [
    "build/src"
  ],
  "license": "Apache-2.0",
  "author": "Andreas Blunk, MaibornWolff GmbH",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/app/default/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "start:prod": "node build/src/app/default/main.js",
    "code-pattern": "ts-node -r tsconfig-paths/register src/app/code-pattern/main.ts",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "lint-fix": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --runInBand",
    "test-failed": "jest -f --runInBand",
    "test:verbose": "jest --verbose",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker-build": "node docker-build.js",
    "docker-run": "node docker-run.js",
    "docker-publish": "node docker-publish.js"
  },
  "dependencies": {
    "@kubernetes/client-node": "^0.17.0",
    "@nestjs/axios": "^0.1.0",
    "@nestjs/common": "^9.0.5",
    "@nestjs/core": "^9.0.5",
    "@nestjs/platform-express": "^9.0.5",
    "axios": "^0.27.2",
    "dotenv": "^16.0.1",
    "immer": "^9.0.15",
    "joi": "^17.6.3",
    "lodash": "^4.17.11",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.1",
    "@nestjs/testing": "^9.0.5",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.6",
    "@types/joi": "^14.3.4",
    "@types/lodash": "^4.14.182",
    "@types/node": "^16.11.45",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "eslint": "^8.20.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
