{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "declaration": true,
    "allowJs": false,
    "noImplicitAny": false,
    //"strict": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "outDir": "./build",
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true
  },
  "lib": [
    "es2024"
  ],
  "rootDirs": [
    "src",
    "test"
  ],
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "temp",
    "build"
  ],
  "ts-node": {
    "files": true,
    "esm": true
  }
}
